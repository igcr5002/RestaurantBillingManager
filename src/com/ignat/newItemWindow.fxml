<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ignat.NewItemController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="dialogPane">
    <content>
        <GridPane hgap="10">
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Name: "/>
            <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Price: "/>
            <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Image: "/>
            <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="Choose..." onAction="#handleOpen"/>
        </GridPane>
    </content>
</DialogPane>
